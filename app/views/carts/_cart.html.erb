<h2><%= t('.your_cart') %></h2>
<table>
	<%= render(cart.line_items) %>
	<tr>
		<td colspan="2"><%= t('.total') %></td>
		<td><%= number_to_currency @cart.total_price%></td>
	</tr>
</table>
<% unless current_page?(new_order_path)%>
	<%= button_to t('.checkout'), new_order_path, method: :get, id: "checkout" %>
<% end %>
<%= button_to t('.empty_cart'), @cart, method: :delete, data: { confirm: t('.are_sure') }, remote: true %>