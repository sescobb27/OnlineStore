<p id="notice"><%= notice %></p>
<h1><%= t('.catalog') %></h1>
<% unless @products.blank? %>
	<table class="table">
	  <% for product in @products %>
	  	<tr class="product">
	  		<%= form_tag(line_items_path(product_id: product), :remote => true) do %> 
		    	<%= image_submit_tag product.photo, class: "img"%>
		    <% end %>
		    <h2>
		    	<%= product.title %>
	    	</h2>
		    <%= sanitize product.description %><br />
		    <%= number_to_currency(product.price) %>
		    <%= button_to t('.add'), line_items_path( product_id: product), remote: true, class: 'add' %>
	   </tr>
	    <hr>
	  <% end %>
	</table>
<% else %>
  
<% end %>

