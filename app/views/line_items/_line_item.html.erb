<% if line_item == @line_item%>
	<tr id="current_item">
<% else %>
	<tr>
<% end %>
		<td><%= line_item.quantity%>&times;</td>
		<td><%= line_item.product.title %></td>
		<td><%= number_to_currency(line_item.product.price) %></td>
		<td><%= button_to 'Remove', decrement_line_item_path(line_item), method: :post, remote: true %></td>
	</tr>